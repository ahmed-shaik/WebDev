<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create a new blog</title>
    <link rel="stylesheet" href="/style.css" />
    <style>
      .input-group {
        margin-bottom: 1rem;
      }
      textarea,
      input[type="text"] {
        margin-top: 0.5rem;
        width: 90%;
        padding: 0.5rem;
        font-size: 1rem;
      }
      .control-buttons {
        margin: 1rem 0;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Welcome to Your Blog</h1>
      <nav>
        <a href="/">Home</a>
        <a href="/posts">All Posts</a>
        <a href="/posts/new">Create Post</a>
      </nav>
    </header>
    <main>
      <section>
        <form method="POST" action="/posts">
          <label for="title">Enter Title of your blog:</label>
          <input
            type="text"
            name="title"
            id="title"
            placeholder="Enter Title of your blog"
            required
          />
          <br />
          <label for="author">Enter Your Name:</label>
          <input
            type="text"
            name="author"
            id="author"
            placeholder="Enter Your Name"
            required
          />
          <br />
          <div id="contentArea"></div>

          <div class="control-buttons">
            <button type="button" onclick="addParagraph()">
              Add Paragraph
            </button>
            <button type="button" onclick="addImage()">Add Image URL</button>
          </div>
          <center>
            <button
              style="padding: 1rem 3rem; font-size: 1.5rem; margin-top: 1rem"
            >
              Submit
            </button>
          </center>
        </form>
      </section>
    </main>
    <script>
      const contentArea = document.getElementById("contentArea");

      function addParagraph() {
        const div = document.createElement("div");
        div.className = "input-group";
        div.innerHTML = `
          <textarea name="content[]" rows="8"  placeholder="Enter paragraph"></textarea>
        `;
        contentArea.appendChild(div);
      }

      function addImage() {
        const div = document.createElement("div");
        div.className = "input-group";
        div.innerHTML = `
          <input type="text" name="content[]" placeholder="Enter image URL (https://...)" />
        `;
        contentArea.appendChild(div);
      }
    </script>
  </body>
</html>
